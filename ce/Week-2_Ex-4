	<input type="radio" name="gender" value="female" /> Female<br/>
	<input type="radio" name="gender" value="other" /> Other
    
  <!-- Checkbox inputs group -->
<h3> Gender (Array - multiple options)</h3>
	<input type="checkbox" name="seeks[]" value="male" /> Male<br/>
	<input type="checkbox" name="seeks[]" value="female"/> Female<br/>
	<input type="checkbox" name="seeks[]" value="other"/> Other
    
  <!-- This will be rendered as a drop down list -->
